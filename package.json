{
  "name": "api-code-notes",
  "version": "0.1.0",
  "description": "API - Code Notes",
  "scripts": {
    "server-prod": "nodemon -r dotenv/config src/index.js",
    "dev": "nodemon -r dotenv/config src/index.js --inspect",
    "prod": "",
    "cy-open": "cypress open",
    "test:watch": "NODE_ENV=local jest --watchAll --verbose",
    "test": "jest",
    "lint": "eslint src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,css,yml}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/*"
    ]
  },
  "author": "Mario Brusarosco",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mariobrusarosco/api-code-notes.git"
  },
  "bugs": {
    "url": "https://github.com/mariobrusarosco/api-code-notes/issues"
  },
  "homepage": "https://github.com/mariobrusarosco/api-code-notes#readme",
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "babel-eslint": "^10.0.1",
    "bcrypt": "^3.0.4",
    "cookie-parser": "^1.4.4",
    "cookie-session": "^1.3.3",
    "cypress": "^3.2.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.16.2",
    "express-static-gzip": "^1.1.3",
    "helmet": "^3.15.1",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "jsonwebtoken": "^8.5.0",
    "mongoose": "^5.7.5",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1",
    "passport": "^0.4.0",
    "passport-google-oauth20": "2",
    "prettier": "^1.18.2",
    "ramda": "^0.26.1",
    "winston": "3.0.0",
    "winston-mongodb": "3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "lint-staged": "^8.1.6",
    "supertest": "^4.0.2"
  }
}
